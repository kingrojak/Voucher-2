<body>
    <div class="container">
        <h2>Sila Tekan "Ya" Untuk Menerima Voucer Shopee Bernilai RM100</h2>
        <div class="button-container">
            <button id="noButton" onclick="alert('Baiklah! Mungkin Lain Kali ðŸ˜Š')">Tidak Berminat</button>
            <button id="yesButton">Ya</button>
        </div>
    </div>

    <script>
        const yesButton = document.getElementById("yesButton");
        const container = document.querySelector(".container");
        let clickCount = 0;

        yesButton.addEventListener("click", () => {
            clickCount++;
            if (clickCount >= 5) {
                yesButton.style.display = "none"; // Hilang selepas 5 kali klik
            } else {
                let newSize = 18 - clickCount * 3; // Mengecil setiap kali klik
                yesButton.style.fontSize = newSize + "px";
                yesButton.style.padding = (10 - clickCount * 2) + "px " + (20 - clickCount * 4) + "px";
            }
        });

        yesButton.addEventListener("mouseover", () => {
            const maxX = container.clientWidth - yesButton.clientWidth;
            const maxY = container.clientHeight - yesButton.clientHeight;

            const newX = Math.random() * maxX;
            const newY = Math.random() * maxY;

            yesButton.style.position = "absolute";
            yesButton.style.left = `${newX}px`;
            yesButton.style.top = `${newY}px`;
        });
    </script>
</body>
